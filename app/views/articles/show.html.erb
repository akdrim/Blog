<p id="notice"><%= notice %></p>

<div class="span-17" id="article-content">
  <h2><%= @article.title %></h2>
  <p>By
  	on <%= @article.created_at%>
  </p>
    <%= @article.body %>
  </p>
  <p>Tags:
    <% @article.tags.each do |tag|%>
      <%= tag.name %> |
   <% end %>
  </p>
</div>

<h2>Comments</h2>
<div id="comments">
  <%= render :partial => @article.comments %>
</div>


<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <p><%= f.submit %></p>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
