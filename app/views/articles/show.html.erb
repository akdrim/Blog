<p id="notice"><%= notice %></p>

<%= render @article %>

<h2>Comments</h2>

<div id="comments">
  <%= render :partial => @article.comments %>
</div>


<%= form_for([@article, @comment]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div id="captcha">
	<%= render '/shared/recaptcha' %>
  </div>
  <p><%= f.submit %></p>
<% end %>

<% if can? :update, @article %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>

<%= link_to 'Back', articles_path %>


