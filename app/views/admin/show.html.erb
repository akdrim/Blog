<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>
<p>
  <b>Tags:</b>
  <% @article.tags.each do |tag|%>
    <%= tag.name %> |
  <% end %>
</p>

<p>
  <% @article.comments.each do |comment| %>
    <p>
      <b>By:</b><%= comment.name %><br />	
      <b>Email:</b><%= comment.email %><br />
      <%= comment.body %>
    </p>  
  <% end %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
